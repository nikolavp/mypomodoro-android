<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="fill_parent" android:layout_height="fill_parent"
	android:orientation="vertical">
	<EditText android:hint="@string/activity_name" android:id="@+id/task_name"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />
	<EditText android:hint="@string/estimated_poms" android:id="@+id/task_estimated_pomodoros"
		android:layout_width="fill_parent" android:layout_height="wrap_content" />


	<EditText android:id="@+id/task_deadline_date" android:hint="@string/pick_deadline_date"
		android:layout_height="wrap_content" android:layout_width="fill_parent" />

	<Spinner android:id="@+id/task_type_spinner"
		android:layout_height="wrap_content" android:prompt="@string/task_type_prompt"
		android:layout_width="fill_parent" android:entries="@array/task_type_array" />

	<ViewStub android:id="@+id/stub" android:layout_width="fill_parent"
		android:layout_height="wrap_content" />

	<!-- <Button android:text="@string/edit" android:id="@+id/edit_button" 
		android:layout_width="fill_parent" android:layout_height="wrap_content" /> -->
</LinearLayout>